pipeline {

    parameters {
        string defaultValue: 'TEST', description: 'enter the environment ', name: 'ENV', trim: true
		choice choices: ['Main', 'Master'], description: 'enter the branch name to execute', name: 'BRANCH'
    }
	environment { 
		DEPLOY_BRANCH= "$BRANCH"
		DEPLOY_ENV= "$ENV"
	}
	

    agent {
        label 'label2'
    }
    stages {
        stage('FIRST') {
            parallel {
                stage('Build1') {
                    steps {
						echo "This is Build1"
						echo "Deploying to ${params.ENV}"
						echo "code from ${params.BRANCH} branch"
                    }
                }
                stage('Deploy1') {
                    steps {
                        sh 'echo "this is deploy1"'
                    }
                }
                stage('Test1') {
                    steps {
                        sh 'echo "this is test1"'
                    }
                }

            }
        }

        stage('SECOND') {
            parallel {
                stage('Build2') {
                    steps {
                        sh 'echo "this is build2"'
                    }
                }
                stage('Deploy2') {
                    steps {
                        sh 'echo "this is deploy2"'
                    }
                }
                stage('Test2') {
                    steps {
                        sh '''
						echo "this is test2"
						echo "this is test2"
						echo "this is test2"
						'''
                    }
                }

            }

        }
    }
}
